# VISUALIZACIÓN DE RESULTADOS


import torch
import matplotlib.pyplot as plt
import numpy as np

print("\n Cargando checkpoint...")
checkpoint = torch.load('checkpoints/' + 
  ('tiny_model.pt' if EXPERIMENT=='TINY' else 
   'small_model.pt' if EXPERIMENT=='SMALL' else 
   'text8.pt'), 
  map_location='cpu')

# Extraer métricas del logger
logger_state = checkpoint['logger']

# Plot training curves
if 'train_bpc' in logger_state:
    fig, axes = plt.subplots(1, 3, figsize=(15, 4))
    
    # Loss curve
    steps = logger_state['step']
    train_bpc = logger_state['train_bpc']
    val_bpc = logger_state['val_bpc']
    
    axes[0].plot(steps, train_bpc, label='Train', alpha=0.7)
    axes[0].plot(steps, val_bpc, label='Val', alpha=0.7)
    axes[0].set_xlabel('Steps')
    axes[0].set_ylabel('BPC')
    axes[0].set_title('Training Progress')
    axes[0].legend()
    axes[0].grid(True, alpha=0.3)
    
    # Span evolution (si está disponible)
    if 'span_avg' in logger_state:
        span_avg = logger_state['span_avg']
        span_max = logger_state['span_max']
        
        axes[1].plot(steps, span_avg, label='Avg Span', alpha=0.7)
        axes[1].plot(steps, span_max, label='Max Span', alpha=0.7)
        axes[1].set_xlabel('Steps')
        axes[1].set_ylabel('Span Length')
        axes[1].set_title('Adaptive Span Evolution')
        axes[1].legend()
        axes[1].grid(True, alpha=0.3)
    
    # Final performance
    axes[2].bar(['Train', 'Val'], 
                [train_bpc[-1], val_bpc[-1]],
                color=['#1f77b4', '#ff7f0e'])
    axes[2].set_ylabel('BPC')
    axes[2].set_title('Final Performance')
    axes[2].grid(True, alpha=0.3, axis='y')
    
    plt.tight_layout()
    plt.show()
    
    print(f"\n Resultados finales:")
    print(f"   Train BPC: {train_bpc[-1]:.3f}")
    print(f"   Val BPC: {val_bpc[-1]:.3f}")
    if 'span_avg' in logger_state:
        print(f"   Avg Span: {span_avg[-1]:.0f}")
        print(f"   Max Span: {span_max[-1]:.0f}")

# ============================================
# ANÁLISIS DE ADAPTIVE SPANS
# ============================================

print("\n Analizando adaptive spans por capa...")

# Cargar modelo
from models import TransformerSeq
from config import PARAMS_CONFIG
from utils import get_params

# Parse params
params = get_params(PARAMS_CONFIG, args=[])
model_params = params['model_params']
adapt_span_params = params['adapt_span_params']

# Crear modelo
model = TransformerSeq(
    vocab_size=checkpoint['model']['in_emb.weight'].shape[0],
    **model_params,
    adapt_io_params={'adapt_io_enabled': False},
    adapt_span_params=adapt_span_params,
    pers_mem_params={'pers_mem_size': 0}
)

# Cargar pesos
model.load_state_dict(checkpoint['model'])
model.eval()

# Extraer spans por capa y head
if adapt_span_params['adapt_span_enabled']:
    spans_per_layer = []
    for layer_idx, layer in enumerate(model.layers):
        span_module = layer.attn.attn.adaptive_span
        current_val = span_module._mask.current_val.detach().cpu().numpy()
        max_span = span_module._max_span
        
        # Convertir z ∈ [0,1] a span real
        spans = current_val.squeeze() * max_span
        spans_per_layer.append(spans)
    
    # Visualizar
    fig, ax = plt.subplots(figsize=(12, 6))
    
    # Heatmap de spans
    spans_matrix = np.array(spans_per_layer)
    im = ax.imshow(spans_matrix, aspect='auto', cmap='YlOrRd')
    
    ax.set_xlabel('Attention Head')
    ax.set_ylabel('Layer')
    ax.set_title('Adaptive Span por Capa y Head')
    
    # Colorbar
    cbar = plt.colorbar(im, ax=ax)
    cbar.set_label('Span Length', rotation=270, labelpad=15)
    
    # Anotar valores
    for i in range(spans_matrix.shape[0]):
        for j in range(spans_matrix.shape[1]):
            text = ax.text(j, i, f'{spans_matrix[i, j]:.0f}',
                          ha="center", va="center", color="black", fontsize=8)
    
    plt.tight_layout()
    plt.show()
    
    # Estadísticas
    print(f"\n Estadísticas de Adaptive Span:")
    print(f"   Span mínimo: {spans_matrix.min():.0f}")
    print(f"   Span máximo: {spans_matrix.max():.0f}")
    print(f"   Span promedio: {spans_matrix.mean():.0f}")
    print(f"   Span mediana: {np.median(spans_matrix):.0f}")
    
    # Spans por capa
    print(f"\n   Promedio por capa:")
    for i, spans in enumerate(spans_per_layer):
        print(f"      Layer {i:2d}: {spans.mean():.0f} (max: {spans.max():.0f})")

print("\n Análisis completado!")

